#!/bin/bash

. ${INSTALLER_DIR}/lib/util.sh

function prepare()
{
  echo $(mkdir -p ${BUILD_DIR})>/dev/null
  echo $(mkdir -p ${BUILD_APP_DIR})>/dev/null
}

function run()
{
  RUN_FILE=${STACK_BIN_DIR}/prepare-${APPLICATION_STACK}.env
  if [[ -f ${RUN_FILE} ]]; then
    runSource ${RUN_FILE}
  fi

  RUN_FILE=${STACK_LIB_DIR}/run-deploy-compose
  runSource ${RUN_FILE}
}

function main()
{
  prepare
  run
}

main